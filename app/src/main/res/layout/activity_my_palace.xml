<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/empty_background">

    <com.example.charles.concentrationpalace.FindSelectedItem
        android:id="@+id/flower1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/flower_crush"/>

    <com.example.charles.concentrationpalace.FindSelectedItem
        android:id="@+id/island"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/island_on_the_flower"/>

    <com.example.charles.concentrationpalace.FindSelectedItem
        android:id="@+id/stone1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/stone_crush"/>

    <com.example.charles.concentrationpalace.FindSelectedItem
        android:id="@+id/tree1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tree_crush"/>

    <com.example.charles.concentrationpalace.FindSelectedItem
        android:id="@+id/house1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/house_crush"/>

    <com.example.charles.concentrationpalace.FindSelectedItem
        android:id="@+id/luwei1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/luwei_crush"/>

    <com.example.charles.concentrationpalace.FindSelectedItem
        android:id="@+id/lotus1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/lotus1"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/coin_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coin_bar"
            android:layout_marginStart="5dp"
            android:textAlignment="textStart"
            android:textSize="20sp"
            android:textColor="@color/design_white"
            android:background="@drawable/ui_style"
            android:drawableStart="@drawable/coin"
            android:drawablePadding="5dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_weight="0.2"/>

        <Button
            android:id="@+id/share_button"
            android:background="@drawable/share"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/share_cover"
        android:contentDescription="@string/app_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/share_background"
        android:visibility="invisible"/>

</FrameLayout>

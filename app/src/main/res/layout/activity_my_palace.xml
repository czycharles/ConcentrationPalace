<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/empty_background">

    <com.example.charles.concentrationpalace.FindSelectedItem
        android:id="@+id/flower1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/flower_crush"/>

    <com.example.charles.concentrationpalace.FindSelectedItem
        android:id="@+id/island"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/island_on_the_flower"/>

    <com.example.charles.concentrationpalace.FindSelectedItem
        android:id="@+id/stone1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/stone_crush"/>

    <com.example.charles.concentrationpalace.FindSelectedItem
        android:id="@+id/tree1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/tree_crush"/>

    <com.example.charles.concentrationpalace.FindSelectedItem
        android:id="@+id/house1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/house_crush"/>

    <com.example.charles.concentrationpalace.FindSelectedItem
        android:id="@+id/luwei1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/luwei_crush"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <ImageView
            android:contentDescription="@string/app_name"
            android:src="@drawable/coin"
            android:layout_marginStart="15dp"
            android:layout_marginTop="1dp"
            android:layout_width="25sp"
            android:layout_height="25sp" />

        <TextView
            android:id="@+id/coin_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/coin_bar"
            android:layout_marginStart="5dp"
            android:textAlignment="textStart"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_weight="0.2"/>

        <Button
            android:id="@+id/share_button"
            android:background="@drawable/share"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp" />
    </LinearLayout>

        <ImageView
            android:contentDescription="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/slot1_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/countdown_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/AD_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_style"
            android:textColor="@color/whitesmoke"
            android:gravity="center"
            android:text="@string/AD_button"
            android:layout_marginBottom="10dp"
            android:textSize="20sp" />

        <ImageView
            android:contentDescription="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"/>
    </LinearLayout>

</FrameLayout>
